        function endElection(id){
            fetch(`/elections/${id}/end`, {
                method: "put",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    "_csrf": token
                })
            })
                .then((res) => {
                    if (res.ok) {
                        window.location.replace(`/elections/${id}/results`);
                    }
                })
                .catch((err) => console.log(err));
        }
// deleting elections function...
        function deleteElection(id){
            fetch(`/elections/${id}`, {
                method: "delete",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    "_csrf": token
                })
            })
                .then((res) => {
                    if (res.ok) {
                        window.location.replace("/elections");
                    }
                })
                .catch((err) => console.log(err));
        }
        
    </script>
</head>
<body>
    <div>
        <a href="/">home</a> > <a href="/elections">elections</a> > <a href="/elections/<%=id%>"><%=electionName%></a>
      </div>
    <%- include('header.ejs') %>
    <a href="/signout"><button>SignOut</button></a>

    <h3><a href="/elections/<%=id%>"><%=electionName%></a></h3>
    <h4>There are <span class="special"><%=quesCount%></span> questions in the ballet of this election</h4>
    <% if (! electionStatus){%>
        <a href="/elections/<%=id%>/questions"><button>Manage your questions</button></a>
    <%}else{%>
        <p>election running at:</p>
        <a id="vote" href="/elections/<%=id%>/vote" class="special">/elections/<%=id%>/vote</a>
        <%}%>
    <h4>There are currently <span class="special"><%=voterCount%></span> voters assigned for this election</h4>
    <a href="/elections/<%=id%>/voters"><button>Manage voters</button></a>
    <div>
        <%if(!electionStatus){%>
            <a href="/elections/<%=id%>/electionPreview"><button>Preview Election</button></a>
            
            <%}else{%>
                <button onclick="endElection(<%=id%>)">End Election</button>
        <%}%>

        <button onclick="deleteElection(<%=id%>)">Delete</button><br>
        <%if(electionStatus){%>
            <a href="/elections/<%=id%>/results"><button>Results</button></a>
        <%}%>
    </div>

    <script>
        const vote=document.getElementById("vote")
        vote.innerText=window.location.origin+vote.innerText
    </script>
</body>
</html>